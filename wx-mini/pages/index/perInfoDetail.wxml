<!--pages/index/perInfoDetail.wxml-->
<view wx:for="{{recordList}}" wx:for-item='item' wx:key='index' style='padding:30rpx;background:#FFF;font-size:30rpx;display:flex;border-bottom:1rpx solid #e5e5ea;'>

  <image wx:if="{{avatarUrl == ''}}" src='{{Imgpath}}' style='width:65rpx;height:65rpx;border-radius:50%;'></image>
  <image wx:else src='{{avatarUrl}}' style='width:65rpx;height:65rpx;border-radius:50%;'></image>

  <view style='width:600rpx;margin-left:20rpx;'>
    <view style='color:#5b6c8c;margin-bottom:10rpx;'>{{teacherName}}</view>
    <view style="word-break: break-all;">
      <text style="letter-spacing:1rpx;font-size: 28rpx;">{{mainText}}</text>
    </view>
    <view style='font-size:24rpx;color:#8f8e94;justify-content: space-between;align-items:center;margin-top:20rpx;'>
      <view wx:for="{{imgUrl}}" wx:for-item="imgitem" wx:key='imgindex' style="display: inline-block;lign-items:center;">
        <view class='picList th1' wx:if="{{imgUrllength == 1}}">
          <image data-showBigImg="{{imgitem}}" data-showswiper="{{imgUrl}}" data-imgid="{{imgindex}}" src='{{imgitem}}' bindtap='showBigImg' mode="aspectFill"></image>
        </view>
        <view class='picList th2' wx:if="{{imgUrllength == 2}}">
          <image data-showBigImg="{{imgitem}}" data-showswiper="{{imgUrl}}" data-imgid="{{imgindex}}" src='{{imgitem}}' bindtap='showBigImg' mode="aspectFill"></image>
        </view>
        <view class='picList th3' wx:if="{{imgUrllength >= 3}}">
          <image data-showBigImg="{{imgitem}}" data-showswiper="{{imgUrl}}" data-imgid="{{imgindex}}" src='{{imgitem}}' bindtap='showBigImg' mode="aspectFill"></image>
        </view>
      </view>
      <view style="margin-top:20rpx;">
        <image wx:if="{{item.likes.teacher.length > 0 || item.likes.parent.length>0}}" src='../../image/nice.png' style='width:30rpx;height:30rpx' mode='cover'></image>
        <block wx:for="{{allTeacherInfo}}" wx:for-item='allTeacheritem' wx:key='allTeacherindex'>
          <block wx:for="{{item.likes.teacher}}" wx:for-item='teacherLikeitem' wx:key='teacherLikeindex'>
            <text wx:if="{{allTeacheritem.teacherId == teacherLikeitem}}"> {{allTeacheritem.nickname}} </text>
          </block>
        </block>
        <block wx:for="{{allParentInfo}}" wx:for-item='allParentitem' wx:key='allParentindex'>
          <block wx:for="{{item.likes.parent}}" wx:for-item='parentLikeitem' wx:key='parentLikeindex'>
            <text wx:if="{{allParentitem.parentId == parentLikeitem}}"> {{allParentitem.name}} </text>
          </block>
        </block>
      </view>
      <view style="display:flex;justify-content: space-between;align-items:center;margin-top:20rpx;">
        <view> {{dateTime}} </view>
        <view style='display:flex;justify-content: space-between;align-items:center;'>

          <!-- 没有点赞数据 -->
          <block wx:if="{{!item.likes.teacher || item.likes.teacher.length == 0}}">
            <image src='../../image/clicknonice.png' style='width:50rpx;height:50rpx;margin-right:26rpx;padding:14rpx;' mode='cover' bindtap='like' data-recordId='{{item.recordId}}' data-authorId="{{item.authorId}}" data-parentRecordId="0" data-familyid="{{familyId}}"></image>
          </block>
          <!-- 有点赞数据 -->
          <block wx:else>
            <!-- 点赞数据没有你 -->
            <block wx:for="{{item.likes.teacher}}" wx:for-item='teacherLikes' wx:key='teacherLikes' wx:if="{{teacherLikes != userId}}">
              <image wx:if="{{index+1 == item.likes.teacher.length}}" src='../../image/clicknonice.png' style='width:50rpx;height:50rpx;margin-right:26rpx;padding:14rpx;' mode='cover' bindtap='like' data-recordId='{{item.recordId}}' data-authorId="{{item.authorId}}"
                data-parentRecordId="0" data-familyid="{{familyId}}"></image>

            </block>
            <!-- 点赞数据有你 -->
            <block wx:for="{{item.likes.teacher}}" wx:for-item='teacherLike' wx:key='teacherLike' wx:if="{{teacherLike == userId}}">
              <image src='../../image/clicknice.png' style='width:50rpx;height:50rpx;margin-right:26rpx;padding:14rpx;' mode='cover' bindtap='like' data-recordId='{{item.recordId}}' data-authorId="{{item.authorId}}" data-parentRecordId="0" data-familyid="{{familyId}}"></image>
            </block>

          </block>
          <navigator url="../pull/pull?recordId={{recordId}}&type=append&orgAuthorId={{orgAuthorId}}&orgAuthorType={{orgAuthorType}}&studentId={{studentId}}&hindname=true&familyId={{familyId}}" hover-class="none" style="margin-top:18rpx">
            <image src='../../image/more.png' style='width:50rpx;height:50rpx;padding:14rpx;' mode='cover'></image>
          </navigator>
        </view>
      </view>
    </view>
  </view>
</view>


<view wx:for='{{appendList}}' wx:for-item='item' wx:key='index' style='padding:30rpx;background:#FFF;font-size:30rpx;display:flex;border-bottom:1rpx solid #e5e5ea;'>

  <image wx:if="{{item.avatarUrl == ''}}" src='{{Imgpath}}' style='width:65rpx;height:65rpx;border-radius:50%;'></image>
